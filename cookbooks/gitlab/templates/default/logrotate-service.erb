<%= @log_directory %>/*.log {
  <%= @options['logrotate_frequency'] %>
  <%= "size #{@options['logrotate_size']}" if @options['logrotate_size'] %>
  rotate <%= @options['logrotate_rotate'] %>
  <%= @options['logrotate_compress'] %>
  <%= @options['logrotate_method'] %>
  missingok
  postrotate
    <%= @options['logrotate_postrotate'] %>
  endscript
}
